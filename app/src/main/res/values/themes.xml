<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Journey" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores de superfície -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Barra de status -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Cores dinâmicas (se suportado) -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Surface colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Typography -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.Journey</item>
        
        <!-- Component styles -->
        <item name="cardViewStyle">@style/Widget.Journey.CardView</item>
        <item name="buttonStyle">@style/Widget.Journey.Button</item>
        <item name="textInputStyle">@style/Widget.Journey.TextInputLayout</item>
    </style>
    
    <!-- Theme Overlay for Typography -->
    <style name="ThemeOverlay.Journey" parent="">
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Journey.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Journey.HeadlineMedium</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Journey.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Journey.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Journey.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Journey.BodyMedium</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Journey.LabelLarge</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.Journey.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Journey.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Journey.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.Journey.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <style name="TextAppearance.Journey.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.Journey.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Journey.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Journey.LabelLarge</item>
    </style>
    
    <style name="Widget.Journey.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Journey.MediumComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Journey.LabelLarge</item>
    </style>
    
    <!-- CardView Style - Versão simplificada -->
    <style name="Widget.Journey.CardView" parent="">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipToPadding">false</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.Journey.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.Journey.MediumComponent</item>
        <item name="boxStrokeColor">@color/gray_400</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="hintTextAppearance">@style/TextAppearance.Journey.BodyMedium</item>
        <item name="android:textAppearance">@style/TextAppearance.Journey.BodyLarge</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.Journey.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:minHeight">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Journey.SmallComponent</item>
        <item name="chipBackgroundColor">@color/gray_100</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Journey.BodyMedium</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Journey.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.Journey.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Journey.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>